{
  "name": "speech-sound-sleuth-backend",
  "version": "1.0.0",
  "description": "Backend for Speech Sound Sleuth",
  "main": "src/app.ts",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx)$"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint 'src/**/*.ts'",
    "start": "node dist/src/app.js",
    "dev": "nodemon - exec 'ts-node' src/app.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kristenmazza/speech-sound-sleuth-backend.git"
  },
  "author": "Kristen Mazza",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kristenmazza/speech-sound-sleuth-backend/issues"
  },
  "homepage": "https://github.com/kristenmazza/speech-sound-sleuth-backend#readme",
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.10",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.6",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.6",
    "@types/supertest": "^2.0.15",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "mongodb": "^6.1.0",
    "mongoose": "^7.6.2",
    "morgan": "^1.10.0"
  }
}
